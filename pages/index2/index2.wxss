.rec-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 4px;
  margin-left: 10px;
  margin-right: 10px;
}

.mid {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  margin-right: 50px;
  min-width: 0;
}

.list-btn {
  border: 1px solid #ddd;
  text-align: center;
  height: 20px;
  width: 20px;
  padding: 5px;
  line-height: 20px;
  margin-right: 10px;
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -15px;
}

.vertical {
  vertical-align: middle;
  margin-right: 5px;
}

.radius {
  background: #ddd;
  border-radius: 8px;
  font-size: 11px;
  padding: 3rpx 10rpx;
  color: #898681;
}

.inner {
  margin-top: 10px;
  text-align: center;
}

.post-mine {
  position: fixed;
  background: red;
  right: 10px;
  bottom: 10px;
  color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 54px;
  height: 54px;
  border-radius: 54px;
  line-height: 1.2;
  text-align: center;
  border: 2px solid #fff;
  box-shadow: 2px 1px 1px #a99f8b;
  z-index: 2;
}

.qrcode {
  width: 250rpx;
  height: 250rpx;
}

.post-txt {
  margin: auto;
}

.word-wrap {
  display: block;
}

.action-sheetwrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
}

.dl-name {
  margin-bottom: 30px;
  font-weight: bold;
}

.f-right {
  margin-left: 10px;
}

.icon-download {
  width: 20px;
  height: 20px;
  vertical-align: middle;
}

.dl-code {
  font-size: 14px;
  border: 1px solid #ddd;
  padding: 5px;
  box-shadow: 1px 1px 1px #ddd;
  width: 90%;
}
