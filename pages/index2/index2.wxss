/* pages/index2/index2.wxss */

/**index.wxss**/

.container {
  font-size: 14px;
  position: relative;
}

.container-wrap {
  margin-bottom: 80px;
}

.top-banner {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
  width: 100%;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-pack: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  height: 40px;
  line-height: 40px;
}

.top-txt {
  margin-left: 10px;
  font-size: 16px;
}

.banner-right {
  background: url('../../images/search.png') no-repeat;
  width: 20px;
  height: 20px;
  background-size: 100%;
  margin-right: 10px;
}

.wrap-header {
  line-height: 1.5;
  padding: 10px 0 10px 10px;
  font-size: 16px;
}

.category {
  background: #eee;
  width: 750rpx;
  height: 240rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  align-items: center;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  padding: 10rpx;
}

.category > view {
  color: #898681;
  padding: 5rpx 26rpx;
  margin-left: 8rpx;
  margin-right: 8rpx;
  height: 34rpx;
  line-height: 34rpx;
}

.recomment {
  box-sizing: border-box;
  padding-bottom: 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  -webkit-justify-content: space-around;
  justify-content: space-around;
  border-bottom: 1px solid #eee;
}

/*.cate-item:hover {
  background: red;
  color: #fff;
  border-radius: 5px;
}*/

.category .selected {
  background: red;
  color: #fff;
  border-radius: 15px;
}

.list {
  width: 750rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
  justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
  padding: 24rpx 0;
}

.list-wrap {
  position: relative;
}

.list .title {
  margin-bottom: 5rpx;
  font-weight: 600;
}

.list .discription {
  margin-bottom: 5rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #898681;
  font-size: 26rpx;
}

